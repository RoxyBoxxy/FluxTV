<%- include("layout", { title: "Users" , user, body: ` <div id="usersPage" data-current-user="${user.username}" class="space-y-10">

  <section class="space-y-3">
    <h1 class="text-3xl font-bold">User Management</h1>
    <p class="text-sm text-gray-300 max-w-2xl">
      Invite teammates or manage your admin logins. Creating an account immediately grants dashboard access.
    </p>
  </section>

  <section class="grid gap-8 lg:grid-cols-[minmax(0,1fr)_minmax(0,1.2fr)]">
    <div class="space-y-4 rounded-3xl border border-white/5 bg-black/40 p-6 shadow-[0_0_40px_rgba(40,10,70,0.65)]">
      <h2 class="text-xl font-semibold text-white">Add a User</h2>
      <p class="text-sm text-gray-300">Choose a unique username and a strong password.</p>

      <form id="userForm" class="space-y-4">
        <div>
          <label for="userUsername" class="block text-sm font-medium mb-1">Username</label>
          <input type="text" id="userUsername" name="username" required
            class="w-full px-4 py-2.5 bg-black/70 border border-white/10 rounded-xl focus:ring-2 focus:ring-purple-500 focus:outline-none text-sm" />
        </div>
        <div>
          <label for="userPassword" class="block text-sm font-medium mb-1">Password</label>
          <input type="password" id="userPassword" name="password" minlength="6" required
            class="w-full px-4 py-2.5 bg-black/70 border border-white/10 rounded-xl focus:ring-2 focus:ring-purple-500 focus:outline-none text-sm" />
        </div>
        <div id="userFormAlert" class="hidden rounded-xl border border-white/10 px-4 py-3 text-sm"></div>
        <button type="submit"
          class="w-full inline-flex items-center justify-center px-4 py-2.5 rounded-xl bg-gradient-to-r from-purple-500 to-fuchsia-500 text-sm font-semibold shadow-neon hover:brightness-110 transition text-white">
          Create user
        </button>
      </form>
    </div>

    <div class="space-y-4 rounded-3xl border border-white/5 bg-black/40 p-6 shadow-[0_0_40px_rgba(40,10,70,0.65)]">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-xl font-semibold text-white">Existing Users</h2>
          <p class="text-sm text-gray-400">All current administrators.</p>
        </div>
        <span id="userCount" class="text-xs px-3 py-1 rounded-full bg-purple-500/20 text-purple-100 border border-purple-400/30">0 users</span>
      </div>

      <div class="overflow-hidden rounded-2xl border border-white/10 bg-black/30">
        <table class="min-w-full text-sm">
          <thead class="bg-white/5 text-gray-300">
            <tr>
              <th class="px-4 py-2 text-left font-medium tracking-wide">ID</th>
              <th class="px-4 py-2 text-left font-medium tracking-wide">Username</th>
              <th class="px-4 py-2 text-left font-medium tracking-wide">Actions</th>
            </tr>
          </thead>
          <tbody id="userTableBody" class="divide-y divide-white/5 text-gray-100">
            <tr>
              <td colspan="3" class="px-4 py-6 text-center text-gray-400 text-sm">
                Loading usersâ€¦
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <dialog id="userEditDialog"
    class="backdrop:bg-black/70 rounded-3xl p-0 bg-transparent text-gray-100 w-[420px] border-0"
    style="margin:auto;">
    <div class="border border-white/10 rounded-3xl p-6 shadow-[0_0_55px_rgba(10,0,20,0.9)]" style="background-color: rgba(10, 4, 22, 0.95);">
      <h3 class="text-2xl font-semibold mb-4 text-white">Edit User</h3>
      <form id="userEditForm" class="space-y-4">
        <input type="hidden" id="editUserId" />
        <div>
          <label class="block text-sm font-medium mb-1">Username</label>
          <input type="text" id="editUsername" readonly
            class="w-full px-4 py-2.5 bg-black/70 border border-white/10 rounded-xl focus:ring-2 focus:ring-purple-500 focus:outline-none text-sm" required />
        </div>
        <div>
          <label class="block text-sm font-medium mb-1">Password <span class="text-xs text-gray-400">(leave blank to keep)</span></label>
          <input type="password" id="editPassword" minlength="6"
            class="w-full px-4 py-2.5 bg-black/70 border border-white/10 rounded-xl focus:ring-2 focus:ring-purple-500 focus:outline-none text-sm" />
        </div>
        <div id="userEditAlert" class="hidden rounded-xl border border-white/10 px-4 py-3 text-sm"></div>
        <div class="flex justify-end gap-3">
          <button type="button" id="userEditCancel"
            class="px-4 py-2.5 rounded-xl border border-white/10 bg-black/60 text-sm text-purple-100 hover:bg-purple-900/40 transition">Cancel</button>
          <button type="submit"
            class="px-4 py-2.5 rounded-xl bg-gradient-to-r from-purple-500 to-fuchsia-500 text-sm font-semibold shadow-neon hover:brightness-110 transition text-white">Save</button>
        </div>
      </form>
    </div>
  </dialog>

  <dialog id="userConfirmDialog"
    class="backdrop:bg-black/70 rounded-3xl p-0 bg-transparent text-gray-100 w-[400px] border-0"
    style="margin:auto;">
    <div class="border border-white/10 rounded-3xl p-6 shadow-[0_0_55px_rgba(10,0,20,0.9)]" style="background-color: rgba(10, 4, 22, 0.95);">
      <h3 class="text-2xl font-semibold mb-4 text-white">Confirm Delete</h3>
      <p id="userConfirmText" class="text-sm text-gray-200"></p>
      <div class="flex justify-end gap-3 mt-6">
        <button type="button" id="userConfirmCancel"
          class="px-4 py-2.5 rounded-xl border border-white/10 bg-black/60 text-sm text-purple-100 hover:bg-purple-900/40 transition">Cancel</button>
        <button type="button" id="userConfirmDelete"
          class="px-4 py-2.5 rounded-xl bg-gradient-to-r from-red-500 to-pink-500 text-sm font-semibold shadow-neon hover:brightness-110 transition text-white">Delete</button>
      </div>
    </div>
  </dialog>

  </div>
  ` }) %>
